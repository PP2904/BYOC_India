<main class="preview-page">
  <section class="cart">
    <h2>Cart</h2>
    <div class="order-summary">
      <ul class="order-summary-list">
        <li class="order-summary-list-list-item">
          <img src="/images/sunglasses.png" class="order-summary-list-list-item-image" alt="Sunglasses">
          <p class="order-summary-list-list-item-title">Sunglasses</p>
          <p class="order-summary-list-list-item-price">50.00</p>
        </li>
        <li class="order-summary-list-list-item">
          <img src="/images/headphones.png" class="order-summary-list-list-item-image" alt="Headphones">
          <p class="order-summary-list-list-item-title">Headphones</p>
          <p class="order-summary-list-list-item-price">50.00</p>
        </li>
      </ul>
    </div>
    <div class="cart-footer">
      <span class="cart-footer-label">Total:</span>
      <span class="cart-footer-amount">100.00</span>
      <a id="checkout-link" href="#">
        <p class="button">Continue to checkout</p>
      </a>
    </div>
  </section>
</main>

<script>
  // Get the `type` parameter from the URL
  const urlParams = new URLSearchParams(window.location.search);
  const type = urlParams.get('type');

  // Update the checkout link with the selected type
  if (type) {
    const checkoutLink = document.getElementById("checkout-link");
    checkoutLink.href = `/checkout?type=${type}`;
  } else {
    console.error("No payment type specified!");
  }
</script>